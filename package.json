{
    "name": "hn-claude-agent",
    "version": "1.0.0",
    "description": "HN Claude Agent - Technical Trend Insights System",
    "main": "index.js",
    "type": "module",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf .next out dist",
        "fetch": "tsx scripts/fetch-hn.ts",
        "test-cache": "tsx scripts/test-cache.ts",
        "auto-fetch:start": "tsx scripts/auto-fetch.ts start",
        "auto-fetch:stop": "tsx scripts/auto-fetch.ts stop",
        "auto-fetch:status": "tsx scripts/auto-fetch.ts status",
        "auto-fetch:check": "tsx scripts/auto-fetch.ts check",
        "forever:start": "forever start --uid hn-claude-agent --name hn-claude-agent --logFile $(pwd)/logs/forever.log --outFile $(pwd)/logs/out.log --errFile $(pwd)/logs/error.log -c 'tsx' scripts/auto-fetch.ts start",
        "forever:stop": "forever stop hn-claude-agent",
        "forever:list": "forever list",
        "forever:logs": "forever logs hn-claude-agent",
        "forever:manage": "./scripts/forever-manager.sh"
    },
    "keywords": [
        "hackernews",
        "claude",
        "ai",
        "trends",
        "tech",
        "insights",
        "nextjs",
        "typescript",
        "tailwindcss",
        "automation",
        "data-analysis"
    ],
    "author": {
        "name": "HN Claude Agent Team",
        "email": "team@hn-claude-agent.com",
        "url": "https://github.com/hn-claude-agent"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/hn-claude-agent/hn-claude-agent.git"
    },
    "bugs": {
        "url": "https://github.com/hn-claude-agent/hn-claude-agent/issues"
    },
    "homepage": "https://github.com/hn-claude-agent/hn-claude-agent#readme",
    "funding": {
        "type": "github",
        "url": "https://github.com/sponsors/hn-claude-agent"
    },
    "dependencies": {
        "@anthropic-ai/claude-agent-sdk": "^0.1.0",
        "@radix-ui/react-slot": "^1.2.3",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "dotenv": "^16.4.5",
        "lucide-react": "^0.460.0",
        "next": "^15.0.3",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-markdown": "^9.0.1",
        "remark-gfm": "^4.0.0",
